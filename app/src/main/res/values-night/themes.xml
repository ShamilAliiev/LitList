<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme - Literary Warmth Dark Theme -->
    <style name="Theme.LitList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color - Lighter amber for dark theme -->
        <item name="colorPrimary">@color/amber_200</item>
        <item name="colorPrimaryVariant">@color/amber_500</item>
        <item name="colorOnPrimary">@color/charcoal</item>
        
        <!-- Secondary brand color - Lighter forest green -->
        <item name="colorSecondary">@color/forest_200</item>
        <item name="colorSecondaryVariant">@color/forest_500</item>
        <item name="colorOnSecondary">@color/charcoal</item>
        
        <!-- Surface colors for dark theme -->
        <item name="colorSurface">@color/ink_dark</item>
        <item name="colorOnSurface">@color/amber_100</item>
        
        <!-- Background colors for dark theme -->
        <item name="android:colorBackground">@color/charcoal</item>
        <item name="colorOnBackground">@color/amber_100</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/burgundy_200</item>
        <item name="colorOnError">@color/charcoal</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/black</item>
        
        <!-- Additional Material Design 3 colors for dark theme -->
        <item name="colorOutline">@color/amber_500</item>
        <item name="colorSurfaceVariant">@color/ink_medium</item>
        <item name="colorOnSurfaceVariant">@color/amber_200</item>
        
        <!-- Custom app colors for dark theme -->
        <item name="colorAccent">@color/burgundy_200</item>
    </style>
    
    <!-- Card style for dark theme -->
    <style name="Theme.LitList.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/ink_dark</item>
        <item name="cardElevation">6dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="rippleColor">@color/amber_500</item>
    </style>
    
    <!-- FAB style for dark theme -->
    <style name="Theme.LitList.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/burgundy_200</item>
        <item name="tint">@color/charcoal</item>
        <item name="rippleColor">@color/burgundy_500</item>
    </style>
</resources>