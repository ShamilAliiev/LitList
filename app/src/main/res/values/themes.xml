<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Literary Warmth Light Theme -->
    <style name="Theme.LitList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color - Warm amber tones -->
        <item name="colorPrimary">@color/amber_700</item>
        <item name="colorPrimaryVariant">@color/amber_900</item>
        <item name="colorOnPrimary">@color/warm_white</item>
        
        <!-- Secondary brand color - Forest green -->
        <item name="colorSecondary">@color/forest_500</item>
        <item name="colorSecondaryVariant">@color/forest_700</item>
        <item name="colorOnSecondary">@color/warm_white</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/warm_white</item>
        <item name="colorOnSurface">@color/ink_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/paper</item>
        <item name="colorOnBackground">@color/ink_dark</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/burgundy_500</item>
        <item name="colorOnError">@color/warm_white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/black</item>
        
        <!-- Additional Material Design 3 colors -->
        <item name="colorOutline">@color/ink_light</item>
        <item name="colorSurfaceVariant">@color/cream</item>
        <item name="colorOnSurfaceVariant">@color/ink_medium</item>
        
        <!-- Custom app colors -->
        <item name="colorAccent">@color/burgundy_500</item>
    </style>
    
    <style name="Theme.LitList.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Card style with warm tones -->
    <style name="Theme.LitList.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/warm_white</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="rippleColor">@color/amber_200</item>
    </style>
    
    <!-- FAB style with accent color -->
    <style name="Theme.LitList.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/burgundy_500</item>
        <item name="tint">@color/warm_white</item>
        <item name="rippleColor">@color/burgundy_200</item>
    </style>
    
    <!-- Progress bar style -->
    <style name="Theme.LitList.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/forest_500</item>
        <item name="android:progressBackgroundTint">@color/amber_100</item>
        <item name="android:secondaryProgressTint">@color/amber_200</item>
    </style>
    
    <!-- Button styles -->
    <style name="Theme.LitList.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/amber_700</item>
        <item name="android:textColor">@color/warm_white</item>
        <item name="rippleColor">@color/amber_200</item>
    </style>
    
    <style name="Theme.LitList.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/forest_500</item>
        <item name="android:textColor">@color/forest_500</item>
        <item name="rippleColor">@color/forest_100</item>
    </style>
</resources>